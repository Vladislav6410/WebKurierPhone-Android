{
  "version": "1.0.0",
  "updatedAt": "2026-01-11",

  "app": {
    "appId": "com.webkurier.android",
    "name": "WebKurierPhone",
    "buildFlavor": "debug",
    "environment": "development"
  },

  "features": {
    "translation": true,
    "voiceCalls": true,
    "lessons": true,
    "wallet": true,
    "dreamMaker": true,
    "vehicleHub": true,
    "securityGates": true
  },

  "i18n": {
    "defaultLang": "de",
    "supportedLangs": ["de", "en", "pl", "ru", "uk"]
  },

  "network": {
    "usePinnedCerts": false,
    "allowHttpInDebug": false
  },

  "webrtc": {
    "enableHardwareAec": true,
    "enableAgc": true,
    "enableNs": true
  },

  "logging": {
    "level": "INFO",
    "redactSensitive": true
  },

  "storage": {
    "secureStore": {
      "provider": "androidx.security.crypto.EncryptedSharedPreferences",
      "keyAlias": "webkurier_keystore_key"
    }
  },

  "notes": [
    "This file is an EXAMPLE only.",
    "Do NOT commit env.local.json or any secrets.",
    "Real endpoints are defined in config/endpoints.json and/or BuildConfig fields."
  ]
}